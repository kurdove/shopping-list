<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">
        <% include ../static/partials/messages.ejs %>

        <h1>Edit Item</h1>
        <form action="/lists/<%= item.listId %>/items/<%= item.id %>/update" method="post">
            <div class="form-group">
                <label for="title">Item title</label>
                <input value="<%= item.title %>" type="text" class="form-control" name="title" aria-describedby="titleHelp" placeholder="Enter Title">
                <small class="text-muted" id="titleHelp">title must be 2 or more characters in length.</small>
            </div>
            <div class="form-group">
                <label for="note">Item note</label>
                <textarea rows="4" class="form-control" name="note" placeholder="Enter Notes"><%= item.note %></textarea>
                <small class="text-muted" id="bodyHelp">note must be max 20 characters in length.</small>
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
        </form>

    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>